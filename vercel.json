{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "apps/docs/next.config.ts",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/apps/docs"
    }
  ],
  "build": {
    "env": {
      "NEXT_PRIVATE_RUNTIME": "nodejs"
    }
  }
}